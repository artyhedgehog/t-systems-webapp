<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="logiweb" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.tsystems.logiweb.persistence.entities.CargoStatus</class>
    <class>com.tsystems.logiweb.persistence.entities.Cargo</class>
    <class>com.tsystems.logiweb.persistence.entities.DriverStatus</class>
    <class>com.tsystems.logiweb.persistence.entities.DriverWorkSummary</class>
    <class>com.tsystems.logiweb.persistence.entities.Driver</class>
    <class>com.tsystems.logiweb.persistence.entities.DriverState</class>
    <class>com.tsystems.logiweb.persistence.entities.Order</class>
    <class>com.tsystems.logiweb.persistence.entities.OrderToDriver</class>
    <class>com.tsystems.logiweb.persistence.entities.OrderWaypoint</class>
    <class>com.tsystems.logiweb.persistence.entities.Road</class>
    <class>com.tsystems.logiweb.persistence.entities.Town</class>
    <class>com.tsystems.logiweb.persistence.entities.TruckCondition</class>
    <class>com.tsystems.logiweb.persistence.entities.Truck</class>
    <class>com.tsystems.logiweb.persistence.entities.TruckState</class>
    <class>com.tsystems.logiweb.persistence.entities.WaypointType</class>
    <validation-mode>AUTO</validation-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tsystems_logiweb" />
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="ShoolBadTableDesk" />
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>
