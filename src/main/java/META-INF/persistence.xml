<?xml version="1.0" encoding="UTF-8"?>
<persistence
  version="2.1"
  xmlns="http://xmlns.jcp.org/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit
    name="logiweb"
    transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.tsystems.logiweb.models.CargoStatus</class>
    <class>com.tsystems.logiweb.models.Cargo</class>
    <class>com.tsystems.logiweb.models.DriverStatus</class>
    <class>com.tsystems.logiweb.models.DriverWorkSummary</class>
    <class>com.tsystems.logiweb.models.Driver</class>
    <class>com.tsystems.logiweb.models.DriverState</class>
    <class>com.tsystems.logiweb.models.Order</class>
    <class>com.tsystems.logiweb.models.OrderToDriver</class>
    <class>com.tsystems.logiweb.models.OrderWaypoint</class>
    <class>com.tsystems.logiweb.models.Road</class>
    <class>com.tsystems.logiweb.models.Town</class>
    <class>com.tsystems.logiweb.models.TruckCondition</class>
    <class>com.tsystems.logiweb.models.Truck</class>
    <class>com.tsystems.logiweb.models.TruckState</class>
    <class>com.tsystems.logiweb.models.WaypointType</class>
    <validation-mode>AUTO</validation-mode>
    <properties>
      <property
        name="hibernate.connection.url"
        value="jdbc:mysql://localhost:3306/tsystems_logiweb" />
      <property
        name="hibernate.connection.driver_class"
        value="com.mysql.jdbc.Driver" />
      <property
        name="hibernate.connection.username"
        value="root" />
      <property
        name="hibernate.connection.password"
        value="ShoolBadTableDesk" />
      <property
        name="hibernate.archive.autodetection"
        value="class" />
      <property
        name="hibernate.show_sql"
        value="false" />
      <property
        name="hibernate.format_sql"
        value="true" />
    </properties>
  </persistence-unit>
</persistence>
